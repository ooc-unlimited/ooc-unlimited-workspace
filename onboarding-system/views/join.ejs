<script>
function playVideo(videoId) {
  const modal = document.getElementById('videoModal');
  const player = document.getElementById('videoPlayer');
  player.src = `https://adilo.bigcommand.com/watch/${videoId}`;
  modal.classList.remove('hidden');
  modal.focus();
}

function closeVideo() {
  const modal = document.getElementById('videoModal');
  const player = document.getElementById('videoPlayer');
  player.src = '';
  modal.classList.add('hidden');
}

// Close video on escape key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    closeVideo();
  }
});

// Close video when clicking outside
document.getElementById('videoModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeVideo();
  }
});

// Show/hide sticky buttons on scroll
window.addEventListener('scroll', function() {
  const stickyButtons = document.getElementById('stickyButtons');
  if (window.scrollY > 400) {
    stickyButtons.classList.remove('hidden');
  } else {
    stickyButtons.classList.add('hidden');
  }
});
</script>

